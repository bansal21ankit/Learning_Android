<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.bansalankit.learning.WebViewActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/activity_padding"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/webview_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://www.bansalankit.com"
        android:inputType="textUri" />

    <Button
        android:onClick="onWebBrowser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="External Web Browser" />

    <Button
        android:onClick="onWebView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Internal Web View" />

    <Button
        android:onClick="onCustomTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chrome Custom Tab" />

    <Button
        android:onClick="onCrossWalk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shared CrossWalk" />
</LinearLayout>
